  background: #fff;

}
.dianbox,.datebox,.gender,.phonebox{
  display: flex;
  padding: 26rpx 0;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  border-bottom: 2rpx solid #eee;
  justify-content: space-between;

}
