}

.lo{
  padding: 0 32rpx;
  margin-top: 32rpx;
}
.lo image{
  width: 140rpx;
  height: 140rpx;
}
.lotitle{
  font-size: 20rpx;
  overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.jg{
      font-size: 28rpx;
    color: red;
}
swiper-item>view{
  width: 140rpx;
}
.diarybox{
  width: 100%;
  margin-bottom: 20rpx;
}
.diary{
  width: 90.5%;
  margin: 0 auto
}
.diarytitle>image{
  vertical-align: bottom;
  width: 48rpx;
  height: 48rpx;
}
.diarytitle{
  color: blueviolet;
}
.dleft{
  width: 98%;
  border-left: 2rpx solid #999;
  margin: 10rpx 0 0 20rpx
}
.dtxt{
      margin-top: 16rpx;
    margin-left: 28rpx;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: #999 0px 0px 5px;
}
.dtitle{
  padding: 28rpx 28rpx 16rpx 28rpx;
}
.dtext{
  font-size: 28rpx;
    color: #888888;
    padding: 0 28rpx 0rem 28rpx;
    margin-bottom: 16rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}
.dimg{
      display: flex;
    justify-content: space-around;
    padding: 0 28rpx 16rpx 28rpx;
    flex-wrap: wrap;
}
.dimg>image{
  width: 32%;
  height: 210rpx;
}
.write{
  position: fixed;
  bottom: 110rpx;
  left: 50%;
  border-radius: 60rpx;
  margin-left: -125rpx;
  padding: 25rpx 32rpx;
  background: #6b36cf;
  color: #fff;
}

@keyframes slidedown {
  from {
    bottom: 110rpx;
  }
  to {
    bottom: 0rpx;
  }
}
.slidedown {
  animation: slidedown 0.5s linear ;
}
.slideup {
  animation: slideup 0.5s linear ;
}
@keyframes slideup {
  from {
    bottom: 0rpx;
  }
  to {
    bottom: 110rpx
  }
}