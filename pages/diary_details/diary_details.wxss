.pastbox{

  padding: 22rpx 32rpx;
  background: #fff;
}
.pasttxt{
      padding: 0.6rem;
}
.pastimg{
  width: 100%;
  display: flex;
    justify-content: space-between;
    padding-bottom: 20rpx;
}
.pastimg>image{
  width:30%;
